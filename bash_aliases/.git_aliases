gpv() {
	SAVED="$@"
	set -- $( lsview )
	export VIEW
	select VIEW
	do
		if [ -n "$VIEW" ] ; then set -- $SAVED ; shift ; cd $VIEW; echo "View: $VIEW";
			export BRANCH=$( cbranch )
			echo "Branch: $BRANCH"
			setup_cscope;
			setrepo_vars; 
			break; 
		fi
		if [ "$REPLY" = "0" ] ; then break ; fi
	done
}

gpb() {
	SAVED="$@"
	set -- $( lbranch | grep -v "^*")
	export BRANCH
	select BRANCH
	do
		if [ -n "$BRANCH" ] ; then 
			set -- $SAVED ; 
			shift ; 
			git checkout $BRANCH ;
			echo "View: $VIEW";
			echo "Branch: $BRANCH";
			setup_cscope;
			break; 
		fi
		if [ "$REPLY" = "0" ] ; then break ; fi
	done
}

